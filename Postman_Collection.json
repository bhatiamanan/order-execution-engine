    {
      "name": "Single Order Flow",
      "item": [
        {
          "name": "1. Submit Market Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user-123\",\n  \"tokenIn\": \"So11111111111111111111111111111111111111112\",\n  \"tokenOut\": \"EPjFWaJiy6ePf60j6sPn6ZozD7Zb9T9r3BjnvG5LLPQ\",\n  \"amountIn\": \"1.5\",\n  \"minAmountOut\": \"140\",\n  \"slippageTolerance\": 0.5\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders/execute",
              "host": ["{{base_url}}"],
              "path": ["api", "orders", "execute"]
            },
            "description": "Submit a market order. Returns orderId and WebSocket URL for status updates."
          }
        },
        {
          "name": "2. Get Order Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/orders/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "orders", "{{order_id}}"]
            },
            "description": "Poll order status. Use orderId from previous response."
          }
        },
        {
          "name": "3. Get User's Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/orders?userId=user-123&limit=10&offset=0",
              "host": ["{{base_url}}"],
              "path": ["api", "orders"],
              "query": [
                {
                  "key": "userId",
                  "value": "user-123"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            },
            "description": "Get all orders for a specific user"
          }
        }
      ]
    },
